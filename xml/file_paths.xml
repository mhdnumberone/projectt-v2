<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Internal app storage -->
    <files-path 
        name="internal_files" 
        path="." />
    
    <!-- Cache directory -->
    <cache-path 
        name="cache_files" 
        path="." />
    
    <!-- External storage -->
    <external-path 
        name="external_storage" 
        path="." />
    
    <!-- External files directory -->
    <external-files-path 
        name="external_files" 
        path="." />
    
    <!-- External cache directory -->
    <external-cache-path 
        name="external_cache" 
        path="." />
    
    <!-- Audio Recordings -->
    <external-files-path 
        name="audio_recordings" 
        path="AudioRecordings/" />
    
    <!-- Documents -->
    <external-path 
        name="documents" 
        path="Documents/" />
    
    <!-- Downloads -->
    <external-path 
        name="downloads" 
        path="Download/" />
    
</paths>